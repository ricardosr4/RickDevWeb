rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Profile: Lectura pública, escritura solo autenticada
    match /profile/{document} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    
    // Experiences: Lectura pública, escritura solo autenticada
    match /experiences/{document} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    
    // Education: Lectura pública, escritura solo autenticada
    match /education/{document} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    
    // Skills: Lectura pública, escritura solo autenticada
    match /skills/{document} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    
    // Projects: Lectura pública, escritura solo autenticada
    match /projects/{document} {
      allow read: if true;
      // Permitir create, update y delete explícitamente para usuarios autenticados
      allow create: if request.auth != null;
      allow update: if request.auth != null;
      allow delete: if request.auth != null;
    }
    
    // Contact Messages: Cualquiera puede escribir (enviar mensajes), solo autenticados pueden leer
    match /contactMessages/{document} {
      allow read: if request.auth != null;
      allow create: if true; // Cualquiera puede crear mensajes
      allow update, delete: if request.auth != null; // Solo autenticados pueden actualizar/eliminar
    }
  }
}

